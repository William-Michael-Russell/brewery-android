<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/edit_name"
    android:layout_width="wrap_content" android:layout_height="wrap_content"
    android:layout_gravity="center" android:orientation="vertical"  >

    <TextView
        android:id="@+id/lbl_add_drink_name" android:text="Drink Name"
        android:layout_width="255dp" android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/txt_add_drink_name"
        android:layout_width="315dp"  android:layout_height="wrap_content"
        android:inputType="text"
        android:width="150dp"
        android:imeOptions="actionDone" />



    <TextView
        android:id="@+id/lbl_add_drink_ingredients" android:text="Drink Ingredients"
        android:layout_width="wrap_content" android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/txt_add_drink_ingredients"
        android:layout_width="match_parent"  android:layout_height="wrap_content"
        android:inputType="text"
        android:width="150dp"
        android:imeOptions="actionDone" />


    <TextView
        android:id="@+id/lbl_add_drink_image" android:text="Drink Image URL"
        android:layout_width="154dp" android:layout_height="wrap_content" />


    <EditText
        android:id="@+id/txt_add_drink_image"
        android:layout_width="195dp"  android:layout_height="wrap_content"
        android:inputType="text"
        android:width="350dp"
        android:imeOptions="actionDone" />


    <Button
        android:id="@+id/btn_save_drink"
        android:layout_width="match_parent"  android:layout_height="wrap_content"
        android:width="150dp"
        android:text="Add Drink"
        android:imeOptions="actionDone" />


    <Button
        android:id="@+id/btn_cancel_drink"
        android:layout_width="match_parent"  android:layout_height="wrap_content"
        android:width="150dp"
        android:text="Cancel"
        android:imeOptions="actionDone" />



</LinearLayout>